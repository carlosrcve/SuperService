# .env (ESTE ARCHIVO NUNCA DEBE SER SUBIDO A GIT)

# ----------------------------------------------------------------------
# 1. CONFIGURACIÓN LOCAL (DESARROLLO)
# ----------------------------------------------------------------------

# Clave secreta para desarrollo. ¡Cambia el valor "TU_CLAVE_SECRETA_LARGA_Y_UNICA" por una real!
SECRET_KEY=TU_CLAVE_SECRETA_LARGA_Y_UNICA_PARA_DESARROLLO

# DEBUG debe ser True para el desarrollo local con SQLite.
DEBUG=True

# --- Variables de Cookies Locales (para desarrollo HTTP) ---
CSRF_COOKIE_SECURE=False
SESSION_COOKIE_SECURE=False

# ----------------------------------------------------------------------
# 2. CONFIGURACIÓN DE PRODUCCIÓN (VALORES DE REEMPLAZO/RENDER)
#    (Estas variables serán sobreescritas por Render)
# ----------------------------------------------------------------------

# Si DEBUG fuera False (producción), Django esperaría estos valores:
# Usaremos PostgreSQL como motor estándar.
DB_ENGINE=django.db.backends.postgresql
DB_NAME=
DB_USER=
DB_PASSWORD=
DB_HOST=
DB_PORT=5432